<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.secuso.privacyfriendlydicegame">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.secuso.privacyfriendlydicegame.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.secuso.privacyfriendlydicegame.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.secuso.privacyfriendlydicegame.AboutActivity"
            android:label="@string/about"
            android:parentActivityName="org.secuso.privacyfriendlydicegame.MainActivity"
            android:screenOrientation="sensorPortrait" />

        <activity
            android:name="org.secuso.privacyfriendlydicegame.HelpActivity"
            android:label="@string/action_help"
            android:parentActivityName="org.secuso.privacyfriendlydicegame.MainActivity"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>